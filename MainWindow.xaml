<Window x:Class="Crypt.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Crypt"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="1">
            <TabControl x:Name="NavBar" SelectionChanged="TabControl_SelectionChanged">
                <TabItem Header="Main Page">
                    <Grid Background="#FFE5E5E5"/>
                </TabItem>
                <TabItem Header="Detailed Page">
                    <Grid Background="#FFE5E5E5"/>
                </TabItem>
            </TabControl>
        </StackPanel>

        <Frame
            x:Name="MainFrame" 
            NavigationUIVisibility="Hidden" Margin="0,24,0,0" 
        />
    </Grid>


</Window>
